FROM golang:1.14.2
WORKDIR /workspace
RUN apt-get update && apt-get install -y --no-install-recommends \
        tini=0.18* \
    && rm -rf /var/lib/apt/lists/*
COPY run.sh .
RUN chmod +x run.sh
COPY go.mod go.sum ./
RUN go mod download -json
COPY hello.go .
RUN go install
USER 1002
ENTRYPOINT ["tini", "-g", "--", "./run.sh"]
CMD ["world"]
